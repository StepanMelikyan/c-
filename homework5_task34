void FillArray (int [] arr)
{
    int length = arr.Length;
    for (int i = 0; i < length; i++)
    {
        arr [i] = new Random().Next (100,1000);
    }
}
int [] array = new int [15];
FillArray(array);
int count= 0;
for (int i = 0; i < array.Length; i++)
{
    if (array[i] % 2 == 0)
    {
        count++;
    }

}
Console.WriteLine(count);
